     <div class="blog-header">
        <h1 class="blog-title">博客主页</h1>
        <p class="lead blog-description">~海内存知己，天涯若比邻~</p>
      </div>

      <div class="row">
        <div class="col-sm-12 blog-main">

        <% @posts.each do |post| %>

          <div class="blog-post">
            <h2 class="blog-post-title f30">
              <%= link_to post_path(post) do  %>
                <%= post.title %>
              <% end %>
              </h2>
            <p class="blog-post-meta">
            <%= post.published_at.strftime("%Y-%m-%d %H:%M:%S") %> by <%= post.author %>
            <span class="label label-default "><%= post.category.name %></span>
            </p>

        <p class="title f16"> <%= truncate_html(raw(post.content), length: 130, word_boundary: /\S[\.\?\!\ ]/) %> </p>

  </div>
<% end %>
<div class="text-center">
      <%= will_paginate @posts, renderer: BootstrapPagination::Rails %>
</div>
        
        </div>


      </div>