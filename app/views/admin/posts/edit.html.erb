<div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">

  <h1 class="page-header">Edit</h1>

<%= form_for(@post,url: admin_post_path(@post)) do |f| %>
<div class="form-group">
    <label for="post_category">Category</label>
    <%= f.select :category_id,options_for_select(Category.all.pluck(:name,:id), @post.category_id) %>
  </div>
  <div class="form-group">
    <label for="post_title">Title</label>
    <%= f.text_field :title,class:"form-control",placeholder:"Title" %>
  </div>
  <div class="form-group">
    <label for="post_author">Author</label>
    <%= f.text_field :author,class:"form-control",placeholder:"Author" %>
  </div>
  <div class="form-group">
    <label for="post_content">Content</label>
    <%= f.text_area :content,class:"form-control",placeholder:"Content" %>
  </div>
  <div class="form-group">
    <label for="post_published_at">Published at</label>
    <%= f.datetime_field :published_at,class:"form-control",placeholder:"Published at" %>
  </div>
  <%= f.submit "Update",class:"btn btn-default" %>
  <% end %>
</div>
