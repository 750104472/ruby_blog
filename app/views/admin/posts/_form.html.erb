<div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
  <h1 class="page-header">New Post</h1>
  <%= url =  @post.new_record?  ? admin_posts_path : admin_post_path(@post) %>
<%= form_for(@post,url: url) do |f| %>
<div class="form-group">
    <label for="post_category">Category</label></br>
    <%= f.select :category_id, options_for_select(Category.all.pluck(:name,:id)) %>
  </div>
  <div class="form-group">
    <label for="post_title">Title</label>
    <%= f.text_field :title,class:"form-control",placeholder:"Title" %>
  </div>
  <div class="form-group">  
    <label for="post_author">Author</label> 
    <%= f.text_field :author,class:"form-control",placeholder:"Author" %>
  </div>
  <div class="form-group">
    <label for="post_content">Content</label>
    <%= f.text_area :content,class:"",placeholder:"Content",style: "height:800px" %>
  </div>
  <div class="form-group">
    <label for="post_published_at">Published at</label>
    <%= f.datetime_field :published_at,class:"form-control",placeholder:"Published at" %>
  </div>
  <% btn_text = @post.new_record? ? 'Create' : 'Update'%>
  <%= f.submit btn_text ,class:"btn btn-default" %>
  <% end %>
</div>

<script type="text/javascript">
  $(function(){
      var editor = new UE.ui.Editor();
        editor.render("post_content");
  })


</script>