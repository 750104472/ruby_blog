<div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
<h1 class="page-header">Posts list</h1>
<div class="table-responsive">
<div>
  <a class="btn btn-primary m20" href="/admin/posts/new">New Post</a>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Id</th>
      <th>Title</th>
      <th>Author</th>
      <th>Published at</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each_with_index do |post,index| %>
    <tr>
      <td><%= show_index(index,@page_number) %></td>
      <td><%= post.title %></td>
      <td><%= post.author %></td>
      <td><%= post.published_at.strftime("%Y-%m-%d %H:%M:%S") %></td>
      <td>
        <%= link_to "修改",edit_admin_post_path(post) %>
        <%= link_to "删除",admin_post_path(post), method: :delete , data: {confirm: "确认删除吗?"}%>
        
      </td>
    </tr>
    <% end %>
  </tbody>

</table>
  <div class="text-center">
      <%= will_paginate @posts, renderer: BootstrapPagination::Rails %>
</div>
</div>
</div>