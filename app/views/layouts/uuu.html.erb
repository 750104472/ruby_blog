    <![endif]-->
  <%= csrf_meta_tag %>
  <%= stylesheet_link_tag "application" %>
  <%= javascript_include_tag "application" %>

  </head>

  <body>

    <div class="blog-masthead">
      <div class="container">
        <nav class="blog-nav">
          <a class="blog-nav-item active" href="#">主页</a>
          <% Category.all.each do |category| %>
          <%= link_to category.name,posts_path(category: category.id), class:"blog-nav-item" %>

          <% end %>
          <a class="blog-nav-item" href="#">关于</a>
          <%= link_to("登出", admin_sign_out_path, class:"blog-nav-item pull-right")%>
        </nav>
      </div>
    </div>

    <div class="container">

    <%= yield %>

    </div><!-- /.container -->

    <footer class="blog-footer">
      <p>博客创建 <a href="http://getbootstrap.com">Bootstrap</a> by <a href="https://twitter.com/mdo">@Linguowei</a>.</p>
      <p>
        <a href="#">Back to top</a>
      </p>
    </footer>


