  <body>

    <div class="blog-masthead">
      <div class="container">
        <nav class="blog-nav">
          <a class="blog-nav-item active" href="/ ">主页</a>
          <% Category.all.each do |category| %>
          <%= link_to category.name,posts_path(category: category.id), class:"blog-nav-item" %>

          <% end %>
          <a class="blog-nav-item" href="#">关于</a>
          <% if sign_in? %>
          <%= link_to("登出", admin_sign_out_path, class:"blog-nav-item pull-right")%>
          <%= link_to("管理后台", admin_root_path, class:"blog-nav-item pull-right")%>
          <% else %>
          <%= link_to("登录", admin_sign_in_path, class:"blog-nav-item pull-right")%>
          <% end %>
        </nav>
      </div>
    </div>

    <div class="container">

    <%= yield %>

